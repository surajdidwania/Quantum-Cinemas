<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/background_dark">



    <TextView
        android:layout_width="1000dp"
        android:layout_height="40dp"
        android:text="Order Summary"
        android:id="@+id/textView15"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="?android:attr/colorPressedHighlight"
        android:textSize="23sp"
        android:textColor="?android:attr/colorPressedHighlight"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MovieName"
        android:layout_below="@id/textView15"
        android:textSize="20sp"
        android:hint="MovieName"
        android:textColor="?android:attr/colorPressedHighlight"
        android:gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/MovieName" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Id:"
            android:layout_marginLeft="120dp"
            android:id="@+id/textView8"
            android:textColor="?android:attr/colorPressedHighlight"
            android:textSize="20sp"
            android:layout_above="@+id/textView3"
            android:layout_alignEnd="@+id/MovieName" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookingid"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            android:layout_below="@id/imageView3"
            android:textColor="?android:attr/colorPressedHighlight"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seats:"
            android:id="@+id/textView3"
            android:layout_below="@+id/bookingid"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="?android:attr/colorPressedHighlight"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seats"
            android:layout_below="@+id/bookingid"
            android:textSize="20sp"
            android:textColor="?android:attr/colorPressedHighlight"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="150dp"
            android:layout_toStartOf="@+id/textView15"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time:"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="?android:attr/colorPressedHighlight"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datetime"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="?android:attr/colorPressedHighlight"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="150dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theatre/Screen:"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="?android:attr/colorPressedHighlight"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/theatrescreen"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:textColor="?android:attr/colorPressedHighlight"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="150dp"
            android:layout_alignEnd="@+id/datetime" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount:"
            android:id="@+id/textView7"
            android:textColor="?android:attr/colorPressedHighlight"
            android:textSize="20sp"
            android:layout_below="@+id/theatrescreen"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalamount"
            android:textColor="?android:attr/colorPressedHighlight"
            android:textSize="20sp"
            android:layout_below="@+id/theatrescreen"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Home"
        android:background="@color/colorPrimary"
        android:id="@+id/home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp" />


</RelativeLayout>
